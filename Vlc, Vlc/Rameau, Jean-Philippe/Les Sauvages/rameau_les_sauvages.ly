\include "deutsch.ly"
  
#(set-global-staff-size 20)

\header {
  title     = \markup \bold \italic "Les Sauvages"
  composer  = "Jean-Philippe Rameau"
  arranger  = "(1683-1764)"
  enteredby = "cellist (2020-11-29)"
  piece     = "Nouvelles Suites de Pi√®ces de Clavecin (1728)"
}

voiceconsts = {
  \key g \minor
  \time 2/2
  \clef "bass"
