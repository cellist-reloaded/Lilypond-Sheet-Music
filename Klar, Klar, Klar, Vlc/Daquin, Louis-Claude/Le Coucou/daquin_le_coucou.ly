}

micl = "clarinet"
mifl = "flute"
miob = "oboe"
mifh = "french horn"
misx = "tenor sax"
mist = "string ensemble 1"
miba = "cello"

boxa = \mark \markup \box "1er Couplet"
boxb = \mark \markup \box "2e Couplet"

auro = \mark \markup \box "au Rondeau"
fine = \mark \markup \box "Fine"

\include "v1.ily"
