\version "2.18.2"
\include "deutsch.ly"
  
#(set-global-staff-size 20)

\header {
  title     = \markup \bold \italic "Badinage"
  composer  = "Jean-Marie Leclair (1697â€“1764)"
  arranger  = "arr.: David McKeown"
  enteredby = "cellist (2020-05-24)"
