\version "2.18.2"
\include "deutsch.ly"
  
#(set-global-staff-size 18.25)

\header {
  title     = \markup \bold \italic "Andante"
  composer  = "Ignaz Joseph Pleyel (1757-1831)"
  arranger  = "arr.: Horst Henke, Dieter Kl√∂cker"
  enteredby = "cellist (2019-10-06)"
