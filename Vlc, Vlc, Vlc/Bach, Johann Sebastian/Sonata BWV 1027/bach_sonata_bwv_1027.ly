}

micl = "clarinet"
mifl = "flute"
miob = "oboe"
mifh = "french horn"
misx = "tenor sax"
mist = "string ensemble 1"
miba = "cello"

introa = {        \tempo "1. Adagio "               4.=35 }
introb = { \break \tempo "2. Allegro, ma non tanto " 4=90 \time 3/4
           % Set default beaming for all staves
	   \set Timing.beamExceptions = #'()
