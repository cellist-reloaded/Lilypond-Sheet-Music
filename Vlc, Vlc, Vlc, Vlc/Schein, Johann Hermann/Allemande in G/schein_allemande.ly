\version "2.18.2"
\include "deutsch.ly"
  
#(set-global-staff-size 20)

\header {
  title     = \markup \bold \italic "Allemande"
  composer  = "Johann Hermann Schein"
  arranger  = "(1586-1630)"
  enteredby = "cellist (2018-09-04)"
%  piece     = ""
}

voiceconsts = {
  \key c \major
  \time 2/2
  \clef "bass"
%  \numericTimeSignature
