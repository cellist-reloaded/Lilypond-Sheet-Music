\version "2.18.2"
\include "deutsch.ly"
  
#(set-global-staff-size 20)

\header {
  title     = \markup \bold \italic "Kein schönrer Tod"
  composer  = "Johann Benjamin Gross"
  arranger  = "(1809-1848)"
  enteredby = "cellist (2020-05-08)"
  piece     = "Vierstimmige Männerlieder: op. 27, Nr. 3"
}

voiceconsts = {
  \key c \major
  \time 4/4
  \clef "bass"
%  \numericTimeSignature
